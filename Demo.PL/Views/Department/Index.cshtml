@using Demo.DAL.Models
@model IEnumerable<Department>
@{
    ViewData["Title"] = "All Department";
}
<a asp-action="Create" class="btn btn-success">Create New </a>
@if(Model.Count()>0){
    <h1>All Department</h1>
    <br />
    <table class="table table-strped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D=>D.Code)</td>
                <td>@Html.DisplayNameFor(D => D.Name)</td>
                <td>@Html.DisplayNameFor(D => D.DateOfCreation)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.DateOfCreation</td>
                    <td> <a asp-action="Detail" asp-route-id="@department.id">click</a></td>
                    @*<i class="fas fa-eye"></i>*@@*Add After FontAwesomr*@
                    <td><a asp-action="Edit" asp-route-id="@department.id">Edit</a></td>
                    @*<i class="fas fa-edit"></i>*@@*Add After FontAwesomr*@
                    <td>Delete</td>

                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="alert alert-warning mt-5">
        <h1>There is no Data</h1>
    </div>
}

